{% block body %}
<h1 align="center">Student</h1>
<style>
    th{
        padding: 10px;
    }

</style>

<table class="table" align="center">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ student.id }}</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>{{ student.username }}</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>{{ student.email }}</td>
    </tr>
    <tr>
        <th>Password</th>
        <td>{{ student.password }}</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>{{ student.firstName }}</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>{{ student.lastName }}</td>
    </tr>
    <tr>
        <th>Cin</th>
        <td>{{ student.cin }}</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>{{ student.status }}</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
        <td>{{ student.dateBirth ? student.dateBirth|date('Y-m-d') : '' }}</td>
    </tr>
    <tr>
        <th>Date Add</th>
        <td>{{ student.dateAdd ? student.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
        <th>Profile Pic</th>
        <td>{{ student.profilePic }}</td>
    </tr>
    <tr>
        <th>State</th>
        <td>{{ student.state }}</td>
    </tr>
    <tr>
        <th>Phone Number</th>
        <td>{{ student.phoneNumber }}</td>
    </tr>
    <tr>
        <th>Nb Formation Enrg</th>
        <td>{{ student.nbFormationEnrg }}</td>
    </tr>
    <tr>
        <th>Active Formation</th>
        <td>{{ student.activeFormation }}</td>
    </tr>
    <tr>
        <th>Finished Formation</th>
        <td>{{ student.finishedFormation }}</td>
    </tr>
    <tr>
        <th>Schedule</th>
        <td>{{ student.schedule }}</td>
    </tr>
    </tbody>
</table>
{% endblock %}
